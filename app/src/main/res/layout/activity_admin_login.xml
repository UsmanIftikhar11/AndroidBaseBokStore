<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.androidbasebokstore.AdminLogin"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/txt_title_admin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Android Based Book Store"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="#000000"/>


    <EditText
        android:id="@+id/edit_email_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_title_admin"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:hint="enter email"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:background="@drawable/edittext_style"/>

    <EditText
        android:id="@+id/edit_pass_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_email_admin"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textAlignment="center"
        android:hint="password"
        android:textColor="#000000"
        android:backgroundTint="#FFFFFF"
        android:background="@drawable/edittext_style"/>

    <Button
        android:id="@+id/btn_login_admin"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/round"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_pass_admin"
        android:layout_marginTop="30dp"
        android:text="Login"
        />

</RelativeLayout>
